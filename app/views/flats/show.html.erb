  <div class="stat">
    <div class="stat-title">Discount (value/day)</div>
    <div class="stat-value"> 1̶0̶0̶ <strong>75$</strong></div>
    <div class="stat-desc">2 days left</div>
  </div>

  <div class="stat">
    <div class="stat-title">Duration</div>
    <div class="stat-value">6 nights</div>
    <div class="stat-desc"> 20/02 to 27/02</div>
  </div>

  <div class="stat">
    <div class="stat-title">Animals</div>
    <div class="stat-value"><i class="fa-solid fa-dog"></i></div>
